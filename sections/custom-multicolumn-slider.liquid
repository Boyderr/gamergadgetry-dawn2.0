
<section class="page-width">
    <h2>{{ section.settings.heading }}</h2>
    <div class="grid-container">
        {%- for block in section.blocks -%}
        <div class="grid-item">
            <div class="grid-item__container">
                <img class="grid-item__image" src={{ block.settings.image | img_url }} alt="{{ block.settings.text }}">
            </div>
            {% comment %} <h3>{{ block.settings.text }}</h3> {% endcomment %}
        </div>
        {%- endfor -%}
    </div>
</section>

{% schema %} 
    {
        "name": "Custom Multicolumn Slider", 
        "settings": [
            {
                "type": "text",
                "id": "heading",
                "label": "Heading",
                "default": "Custom Multicolumn Slider"

            }
        ],
        "presets": [
            {
                "name": "Custom Multicolumn Slider"
            }
        ],
        "blocks": [
            {
                "name": "Column Image",
                "type": "column-image",
                "settings": [
                    {
                        "type": "image_picker",
                        "id": "image",
                        "label": "Select Image"
                    },
                    {
                        "type": "text",
                        "id": "text",
                        "label": "Text"
                    },
                    {
                        "type": "url",
                        "id": "url",
                        "label": "URL"
                    }
                ]
            }
        ]
    }
{% endschema %}

{% stylesheet %}

.grid-container {
    display: grid;
    grid-template-columns: 1fr;
    gap: 1rem;
}

.grid-item, .grid-item__image {
    width: 100%;
}

@media screen and (min-width: 768px) {
    .grid-container {
        grid-template-columns: repeat(3 , 1fr);
    }
}


{% endstylesheet %}

