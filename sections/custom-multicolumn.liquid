{{ 'section-custom-multicolumn.css' | asset_url | stylesheet_tag }}

<section class="color_scheme color-{{ section.settings.color_scheme }}">
    <div class="page-width custom-multicolumn section-template--16192079102111__d6c7b198-a749-4ccc-a6af-787457c5f7e4-padding">
        <h2>{{ section.settings.heading }}</h2>
        <div class="grid-container">
            {%- for block in section.blocks -%}
            <div class="grid-item">
                <a href="{{ block.settings.url }}">
                    <div class="grid-item__container">
                        <div class="grid-item__overlay">
                            <img class="grid-item__image" src={{ block.settings.image | img_url: 'large' }} alt="{{ block.settings.product-category }}">
                            <h3 class="grid-item__text">
                                {{ block.settings.product-category }}
                            </h3>
                            <div class="grid-item__border"></div>
                        </div>
                    </div>  
                </a>
            </div>
            {%- endfor -%}
        </div>
    </div>
</section>

{% schema %} 
    {
        "name": "Custom Multicolumn", 
        "settings": [
            {
                "type": "text",
                "id": "heading",
                "label": "Heading",
                "default": "Custom Multicolumn"

            },
            {
                "type": "color_scheme",
                "id": "color_scheme",
                "label": "t:sections.all.colors.label",
                "default": "background-1"
            }
        ],
        "presets": [
            {
                "name": "Custom Multicolumn"
            }
        ],
        "blocks": [
            {
                "name": "Column Image",
                "type": "column-image",
                "settings": [
                    {
                        "type": "image_picker",
                        "id": "image",
                        "label": "Select Image"
                    },
                    {
                        "type": "text",
                        "id": "product-category",
                        "label": "Text"
                    },
                    {
                        "type": "url",
                        "id": "url",
                        "label": "URL"
                    }
                ]
            }
        ]
    }
{% endschema %}

